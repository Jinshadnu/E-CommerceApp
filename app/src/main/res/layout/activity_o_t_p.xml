<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".otp.OTPActivity"
        android:background="@mipmap/login_background">

        <TextView
            android:id="@+id/textView_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="84dp"
            android:text="OTP Verification"
            android:textStyle="bold"
            android:fontFamily="@font/amaranth"
            android:textColor="@color/colorDarkstateRed"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_otp"
            app:srcCompat="@mipmap/e_commerce"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Enter your OTP"
            android:textColor="@color/colorDarkstateRed"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <EditText
            android:id="@+id/editTextOTP1"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@mipmap/otp_field"
            android:ems="10"
            android:hint="0"
            android:textAlignment="center"
            android:inputType="textPersonName"
            android:text=""
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <EditText
            android:id="@+id/editTextOTP2"
            android:layout_width="@dimen/size_50dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@mipmap/otp_field"
            android:ems="10"
            android:hint="0"
            android:textAlignment="center"
            android:inputType="textPersonName"
            android:text=""
            app:layout_constraintStart_toEndOf="@+id/editTextOTP1"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <EditText
            android:id="@+id/editTextOTP3"
            android:layout_width="@dimen/size_50dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@mipmap/otp_field"
            android:ems="10"
            android:hint="0"
            android:textAlignment="center"
            android:inputType="textPersonName"
            android:text=""
            app:layout_constraintStart_toEndOf="@+id/editTextOTP2"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <EditText
            android:id="@+id/editTextOTP4"
            android:layout_width="@dimen/size_50dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@mipmap/otp_field"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="0"
            android:textAlignment="center"
            android:text=""
            app:layout_constraintStart_toEndOf="@+id/editTextOTP3"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />
        <EditText
            android:id="@+id/editTextOTP5"
            android:layout_width="@dimen/size_50dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@mipmap/otp_field"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="0"
            android:textAlignment="center"
            android:text=""
            app:layout_constraintStart_toEndOf="@+id/editTextOTP4"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <Button
            android:id="@+id/button_verify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/button_shape"
            android:text="Verify"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextOTP1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
