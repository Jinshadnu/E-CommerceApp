<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F5FA"
        tools:context=".activity.products.PriceDetailsActivity">

        <include
            android:id="@+id/layoutBase"
            layout="@layout/layout_base"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutBase"
            android:layout_marginTop="@dimen/size_20dp"
            android:layout_marginLeft="@dimen/size_16dp"
            android:layout_marginRight="@dimen/size_16dp"
            app:cardElevation="@dimen/padd_10"
            app:cardBackgroundColor="@color/colorwhite">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/text_priceheading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price Details"
                    android:textSize="@dimen/size_20dp"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:textColor="@color/colorblack"
                    android:fontFamily="@font/amaranth"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/text_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_priceheading"
                    android:text="Price"
                    android:textSize="@dimen/size_16dp"
                    android:textColor="@color/colorblack"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:padding="@dimen/padd_10"
                    android:layout_marginLeft="@dimen/padd_10"
                    android:fontFamily="@font/amaranth"/>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_priceheading"
                    android:text="Rs.15000/-"
                    android:textSize="@dimen/size_16dp"
                    android:textColor="@color/colorblack"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:padding="@dimen/padd_10"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/size_15dp"
                    android:fontFamily="@font/amaranth"/>

                <TextView
                    android:id="@+id/text_shipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_price"
                    android:text="Shipping"
                    android:textSize="@dimen/size_16dp"
                    android:textColor="@color/colorblack"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:padding="@dimen/padd_10"
                    android:layout_marginLeft="@dimen/padd_10"
                    android:fontFamily="@font/amaranth"/>

                <TextView
                    android:id="@+id/shipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_price"
                    android:text="Free"
                    android:textSize="@dimen/size_16dp"
                    android:textColor="@color/colorblack"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:padding="@dimen/padd_10"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/size_15dp"
                    android:fontFamily="@font/amaranth"/>
                <TextView
                    android:id="@+id/text_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_shipping"
                    android:text="Total Price"
                    android:textSize="@dimen/size_16dp"
                    android:textColor="@color/colorblack"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:padding="@dimen/padd_10"
                    android:layout_marginLeft="@dimen/padd_10"
                    android:fontFamily="@font/amaranth"/>

                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_shipping"
                    android:text="Rs.15000/-"
                    android:textSize="@dimen/size_16dp"
                    android:textColor="@color/colorblack"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:padding="@dimen/padd_10"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/size_15dp"
                    android:fontFamily="@font/amaranth"/>




            </RelativeLayout>





        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAddToCart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="Add to cart"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnBuy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorDarkstateRed"
                android:text="Buy"
                android:textColor="@color/white" />
        </LinearLayout>

    </RelativeLayout>
</layout>
