<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="subcategories"
            type="com.example.e_commerceapp.activity.pojo.SubCategories" />
    </data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginBottom="@dimen/size_3dp"
        android:layout_marginLeft="@dimen/size_2dp"
        android:layout_marginRight="@dimen/size_2dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorwhite"
            android:layout_margin="@dimen/size_5dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="@dimen/size_5dp"
            app:cardElevation="@dimen/size_5dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/text_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{subcategories.sub_category_name}"
                    android:textColor="@color/colorblack"
                    android:maxLines="1"
                    android:padding="@dimen/size_10dp"
                    android:layout_marginLeft="@dimen/size_5dp"
                    android:layout_marginRight="@dimen/size_5dp"
                    android:singleLine="true"
                    android:textSize="@dimen/size_16dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/amaranth"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>




    </RelativeLayout>
</layout>
