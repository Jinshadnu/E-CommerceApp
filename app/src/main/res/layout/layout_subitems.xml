<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="subitems"
            type="com.example.e_commerceapp.activity.pojo.Items" />
    </data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="@dimen/size_1dp"
        xmlns:bind="http://schemas.android.com/tools">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="@dimen/size_5dp"
            app:cardCornerRadius="@dimen/size_1dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/colorwhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="@dimen/size_100dp"
                    android:layout_height="@dimen/size_70dp"
                    android:layout_marginTop="@dimen/size_15dp"
                    android:layout_gravity="center_horizontal"
                    app:items="@{subitems.item_image}"                     />

                <TextView
                    android:id="@+id/textView35"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@{subitems.item_name}"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:textColor="@color/colorblack"
                    android:fontFamily="@font/amaranth"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/imageView6"
                    android:lineSpacingExtra="2sp"
                    android:maxLines="1"
                    android:padding="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView6" />



                <RelativeLayout
                    android:id="@+id/relative_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView35"
                    android:layout_toRightOf="@id/imageView6"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView36"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs :"
                        android:padding="1dp"
                        android:layout_marginLeft="@dimen/size_10dp"
                        android:textColor="@color/colorDarkstateRed"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        />


                    <TextView
                        android:id="@+id/text_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{subitems.item_price}"
                        android:textColor="@color/colorDarkstateRed"
                        android:textSize="18sp"
                        android:padding="1dp"
                        android:layout_toRightOf="@id/textView36"
                        app:layout_constraintBottom_toBottomOf="@+id/textView36"
                        app:layout_constraintStart_toEndOf="@+id/textView36"
                        app:layout_constraintTop_toTopOf="@+id/textView36"
                        app:layout_constraintVertical_bias="0.476" />



                </RelativeLayout>





                <Button
                    android:id="@+id/buttonAddCart"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="@dimen/padd_10"
                    android:background="@drawable/button_shape"
                    android:text="Add To Cart"
                    android:layout_marginBottom="@dimen/size_5dp"
                    android:layout_marginLeft="@dimen/padd_10"
                    android:textAllCaps="false"
                    android:layout_toRightOf="@id/imageView6"
                    android:layout_below="@id/relative_price"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:textColor="@color/colorwhite"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </RelativeLayout>
</layout>
