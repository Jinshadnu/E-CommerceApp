<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.products.SuccessActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Success"
        android:textSize="@dimen/size_25dp"
        android:layout_marginTop="@dimen/size_50dp"
        android:textStyle="bold"
        android:fontFamily="@font/amaranth"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/imageview_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/success"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thanks for your Order"
        android:layout_below="@id/imageview_success"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textSize="@dimen/size_20dp"
        android:layout_marginTop="@dimen/padd_10"
        android:fontFamily="@font/amaranth"/>

</RelativeLayout>