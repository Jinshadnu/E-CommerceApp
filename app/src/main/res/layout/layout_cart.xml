<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="cartItems"
            type="com.example.e_commerceapp.bottomNavigation.pojo.Cart" />
    </data>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginLeft="@dimen/size_16dp"
        android:layout_marginRight="@dimen/size_16dp"
        android:layout_marginBottom="@dimen/padd_10"
        app:cardBackgroundColor="@color/colorwhite"
        app:cardElevation="@dimen/size_5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:clipToPadding="false">


            <ImageView
                android:id="@+id/imageView_item"
                android:layout_width="@dimen/size_90dp"
                android:layout_height="@dimen/size_70dp"
                android:src="@drawable/watch"
                android:layout_centerVertical="true"
                android:padding="@dimen/size_5dp"
                />

            <TextView
                android:id="@+id/text_itemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imageView_item"
                android:text="Shoe"
                android:layout_marginLeft="@dimen/size_16dp"
                android:textStyle="bold"
                android:textSize="@dimen/size_20dp"
                android:layout_marginTop="@dimen/size_25dp"
                android:textColor="@color/colorDarkstateRed"
                android:fontFamily="@font/amaranth"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imageView_item"
                android:text="Rs 750"
                android:layout_marginLeft="@dimen/size_16dp"
                android:textStyle="normal"
                android:textSize="@dimen/size_16dp"
                android:layout_below="@id/text_itemName"
                android:layout_marginTop="@dimen/size_5dp"
                android:textColor="@color/colorDarkstateRed"
                android:fontFamily="@font/amaranth"/>


            <LinearLayout
                android:id="@+id/qtyLay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/size_10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="false"
                    android:src="@drawable/ic_minus__1_" />

                <TextView
                    android:id="@+id/quantityValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_8dp"
                    android:layout_marginRight="@dimen/size_8dp"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_16dp" />

                <ImageView
                    android:id="@+id/plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="false"
                    android:src="@drawable/ic_add" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView_item"
                android:background="@drawable/border"
                android:layout_alignParentBottom="true"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="Remove"
                    android:padding="@dimen/size_5dp"
                    android:textSize="@dimen/size_16dp"
                    android:textStyle="bold"
                    android:drawablePadding="@dimen/padd_10"
                    android:drawableLeft="@drawable/ic_baseline_delete_24"
                    android:textColor="@color/colorDarkstateRed"
                    android:fontFamily="@font/amaranth"/>

            </RelativeLayout>

        </RelativeLayout>





    </androidx.cardview.widget.CardView>
</layout>
