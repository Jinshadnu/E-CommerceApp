<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.e_commerceapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ECommerceApp"
        tools:replace="android:theme">
        <activity android:name=".activity.user.ForgotPasswordActivity"></activity>
        <activity android:name=".activity.user.ChangepasswordActivity" />
        <activity android:name=".activity.user.MyOrderActivity" />
        <activity
            android:name=".bottomNavigation.StartActivity"
            android:label="@string/title_activity_start"
            android:theme="@style/Theme.ECommerceApp.NoActionBar" />
        <activity android:name=".activity.products.SubCatgActivity" />
        <activity android:name=".activity.products.SuccessActivity" />
        <activity android:name=".activity.products.PriceDetailsActivity" />
        <activity android:name=".activity.products.ProductDetailsActivity" />
        <activity android:name=".activity.user.ShippingAddressActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".activity.SubCategoryActivity" />
        <activity android:name=".bottomNavigation.HomeActivity" />
        <activity android:name=".otp.OTPActivity" />
        <activity android:name=".register.RegisterActivity" />
        <activity android:name=".splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>